{
  // Cloudflare Worker + Static Assets
  // Se despliega con: npx wrangler deploy
  "name": "catalogo-templo-motor",
  "main": "src/index.js",
  "compatibility_date": "2025-12-28",
  "workers_dev": false,
  "routes": ["catalogo.templogarage.com/*"],
  "assets": {
    "directory": "./public"
  },
  "vars": {
    "WOMPI_CURRENCY": "COP"
  }
  // IMPORTANTE: configura secretos en Cloudflare (no en Git):
  // - WOMPI_INTEGRITY_SECRET
  // - RESEND_API_KEY (si lo usas desde backend)
}
